<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- CardView يحتوي على أيقونات التحكم -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- أيقونة زائد -->
            <net.steamcrafted.materialiconlib.MaterialIconView
                android:id="@+id/plus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circlw_bac1"
                app:materialIcon="plus"
                app:materialIconColor="#303F9F"
                app:materialIconSize="40dp"
                android:layout_margin="5dp"/>

            <!-- أيقونة ناقص -->
            <net.steamcrafted.materialiconlib.MaterialIconView
                android:id="@+id/minus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circlw_bac4"
                app:materialIcon="minus"
                app:materialIconColor="#303F9F"
                app:materialIconSize="40dp"
                android:layout_margin="5dp"/>

            <!-- أيقونة مشاركة -->
            <net.steamcrafted.materialiconlib.MaterialIconView
                android:id="@+id/share"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circlw_bac4"
                app:materialIcon="share_variant"
                app:materialIconColor="#303F9F"
                app:materialIconSize="40dp"
                android:layout_margin="5dp"/>

            <!-- أيقونة نجمة -->
            <net.steamcrafted.materialiconlib.MaterialIconView
                android:id="@+id/stars"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circlw_bac3"
                app:materialIcon="star"
                app:materialIconColor="#303F9F"
                app:materialIconSize="40dp"
                android:layout_margin="5dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- CardView يحتوي على النصوص -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="15dp"
        app:cardElevation="3dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/texts1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="أذكار الصباح والمساء والمسلم"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#01669C"
                android:gravity="center"
                android:fontFamily="@font/hola"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowColor="#011925"
                android:lineSpacingExtra="5dp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/texts2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="texts1"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#01669C"
                android:gravity="center"
                android:fontFamily="@font/hola"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowColor="#011925"
                android:lineSpacingExtra="5dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
