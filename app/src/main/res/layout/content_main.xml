                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_margin="4dp"
                        app:cardElevation="8dp"
                        android:onClick="ooh1"
                        app:cardBackgroundColor="#F57C00"
                        android:layout_width="50dp"
                        app:cardCornerRadius="25dp"
                        android:layout_height="50dp">

                        <net.steamcrafted.materialiconlib.MaterialIconView
                            android:id="@+id/faceabout"
                            android:onClick="ooh1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleType="center"
                            app:materialIcon="share_variant"
                            app:materialIconColor="#FFFFFF"
                            app:materialIconSize="40dp" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/rate_app"
                        android:layout_margin="4dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="#0097A7"
                        android:layout_width="50dp"
                        app:cardCornerRadius="25dp"
                        android:layout_height="50dp">
                        <net.steamcrafted.materialiconlib.MaterialIconView
                            android:id="@+id/shareabout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleType="center"
                            app:materialIcon="star"
                            app:materialIconColor="#FFFFFF"
                            app:materialIconSize="40dp" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/share_app"
                        android:layout_width="50dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="#F57C00"
                        android:layout_margin="4dp"
                        android:layout_height="50dp">
                        <net.steamcrafted.materialiconlib.MaterialIconView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="center"
                            android:layout_gravity="center"
                            app:materialIcon="heart"
                            app:materialIconColor="#FFFFFF"
                            app:materialIconSize="40dp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/about"
                        android:layout_width="50dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="#388E3C"
                        android:layout_margin="4dp"
                        android:layout_height="50dp">
                        <net.steamcrafted.materialiconlib.MaterialIconView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="center"
                            android:layout_gravity="center"
                            app:materialIcon="account"
                            app:materialIconColor="#FFFFFF"
                            app:materialIconSize="40dp" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
