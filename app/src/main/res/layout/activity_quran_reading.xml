<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7e0a3"
    android:orientation="vertical"
    tools:context=".quran.quran_reading_v2.QuranReadingActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/back_button"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/ic_back_button" />

            <androidx.cardview.widget.CardView
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_margin="4dp"
                android:onClick="plus"
                app:cardBackgroundColor="#ff7bb0"
                app:cardCornerRadius="25dp"
                app:cardElevation="8dp">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:id="@+id/iconplus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:onClick="plus"
                    android:scaleType="center"
                    app:materialIcon="plus"
                    app:materialIconColor="#FFFFFF"
                    app:materialIconSize="40dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_margin="4dp"
                android:onClick="minus"
                app:cardBackgroundColor="#ff7bb0"
                app:cardCornerRadius="25dp"
                app:cardElevation="8dp">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:id="@+id/shareabout"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:onClick="minus"
                    android:scaleType="center"
                    app:materialIcon="minus"
                    app:materialIconColor="#FFFFFF"
                    app:materialIconSize="40dp" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_margin="4dp"
                android:onClick="star"
                app:cardBackgroundColor="#32dbc6"
                app:cardCornerRadius="25dp"
                app:cardElevation="8dp">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:onClick="star"
                    android:scaleType="center"
                    app:materialIcon="star"
                    app:materialIconColor="#FFFFFF"
                    app:materialIconSize="40dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/screen_on"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_margin="4dp"
                android:onClick="star"
                android:visibility="visible"
                app:cardBackgroundColor="#32dbc6"
                app:cardCornerRadius="25dp"
                app:cardElevation="8dp">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:onClick="screenOn"
                    android:scaleType="center"
                    app:materialIcon="eye"
                    app:materialIconColor="#FFFFFF"
                    app:materialIconSize="40dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/screen_off"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_margin="4dp"
                android:onClick="star"
                android:visibility="gone"
                app:cardBackgroundColor="#32dbc6"
                app:cardCornerRadius="25dp"
                app:cardElevation="8dp">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:onClick="screenOn"
                    android:scaleType="center"
                    app:materialIcon="eye_off"
                    app:materialIconColor="#FFFFFF"
                    app:materialIconSize="40dp" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/des00sql"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/ooo03"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/flat"
                        android:gravity="center"
                        android:lineSpacingExtra="5dp"
                        android:shadowColor="#011925"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:textColor="#C2185B"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/ooo02"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/flat"
                        android:gravity="center"
                        android:lineSpacingExtra="5dp"
                        android:shadowColor="#011925"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:textColor="#800000"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/ooo01"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/flat"
                        android:gravity="center"
                        android:lineSpacingExtra="5dp"
                        android:shadowColor="#011925"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:textColor="#C2185B"
                        android:textSize="11dp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/ts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:shadowColor="#011925"
                android:shadowDx="2"
                android:shadowDy="2"
                android:text="ffd"
                android:textColor="#00101A"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>