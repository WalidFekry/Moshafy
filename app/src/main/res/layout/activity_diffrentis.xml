<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".monw3at.Diffrentis">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            app:cardElevation="5dp"
            app:cardBackgroundColor="#1898AE"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true"
            app:cardMaxElevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >


                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animationView"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/islamic" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <androidx.cardview.widget.CardView
                            android:onClick="Title1"
                            android:layout_width="match_parent"
                            app:cardUseCompatPadding="true"
                            app:cardElevation="5dp"
                            app:cardBackgroundColor="#FCF8F8"
                            app:cardCornerRadius="10dp"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:onClick="Title1"
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                android:background="@drawable/buoo1"
                                android:clickable="true"
                                android:layout_margin="10dp"
                                android:descendantFocusability="blocksDescendants"
                                android:gravity="center"
                                android:orientation="horizontal" >

                                <TextView
                                    android:onClick="Title1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="أذكار بعد السلام من الصلاة المفروضة "
                                    android:textSize="19sp"
                                    android:fontFamily="@font/flat5"
                                    android:textStyle="bold"
                                    android:textColor="#252020" />
                                <ImageView
                                    android:onClick="Title1"
                                    android:layout_width="50dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_height="50dp"
                                    android:contentDescription="@string/app_name"
                                    android:src="@drawable/slaa" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:onClick="Title"
                        android:layout_height="match_parent">
                        <androidx.cardview.widget.CardView
                            android:onClick="Title"
                            android:layout_width="match_parent"
                            app:cardUseCompatPadding="true"
                            app:cardElevation="5dp"
                            app:cardBackgroundColor="#FCF8F8"
                            app:cardCornerRadius="10dp"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                android:background="@drawable/buoo1"
                                android:clickable="true"
                                android:onClick="Title"
                                android:layout_margin="10dp"
                                android:descendantFocusability="blocksDescendants"
                                android:gravity="center"
                                android:orientation="horizontal" >

                                <TextView
                                    android:onClick="Title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="الرقيه الشرعيه"
                                    android:textSize="21sp"
                                    android:fontFamily="@font/flat5"
                                    android:textStyle="bold"
                                    android:textColor="#252020" />

                                <ImageView
                                    android:onClick="Title"
                                    android:layout_width="50dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_height="50dp"
                                    android:contentDescription="@string/app_name"
                                    android:src="@drawable/rokia" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:onClick="Title3"
                        android:layout_height="match_parent">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            app:cardUseCompatPadding="true"
                            app:cardElevation="5dp"
                            android:onClick="Title3"
                            app:cardBackgroundColor="#FCF8F8"
                            app:cardCornerRadius="10dp"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                android:background="@drawable/buoo1"
                                android:clickable="true"
                                android:onClick="Title3"
                                android:layout_margin="10dp"
                                android:descendantFocusability="blocksDescendants"
                                android:gravity="center"
                                android:orientation="horizontal" >

                                <TextView
                                    android:onClick="Title3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="أحاديث شريفة قصيرة "
                                    android:textSize="21sp"
                                    android:fontFamily="@font/flat5"
                                    android:textStyle="bold"
                                    android:textColor="#252020" />

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_height="50dp"
                                    android:contentDescription="@string/app_name"
                                    android:src="@drawable/file" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:onClick="Title4"
                        android:layout_height="match_parent">
                        <androidx.cardview.widget.CardView
                            android:onClick="Title4"
                            android:layout_width="match_parent"
                            app:cardUseCompatPadding="true"
                            app:cardElevation="5dp"
                            app:cardBackgroundColor="#FCF8F8"
                            app:cardCornerRadius="10dp"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:onClick="Title4"
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                android:background="@drawable/buoo1"
                                android:clickable="true"
                                android:layout_margin="10dp"
                                android:descendantFocusability="blocksDescendants"
                                android:gravity="center"
                                android:orientation="horizontal" >

                                <TextView
                                    android:onClick="Title4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="وصايا و سنن الرسول"
                                    android:textSize="21sp"
                                    android:fontFamily="@font/flat5"
                                    android:textStyle="bold"
                                    android:textColor="#252020" />

                                <ImageView
                                    android:onClick="Title4"
                                    android:layout_width="50dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_height="50dp"
                                    android:contentDescription="@string/app_name"
                                    android:src="@drawable/wsaya" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:onClick="Title5"
                        android:layout_height="match_parent">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            app:cardUseCompatPadding="true"
                            app:cardElevation="5dp"
                            android:onClick="Title5"
                            app:cardBackgroundColor="#FCF8F8"
                            app:cardCornerRadius="10dp"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:onClick="Title5"
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                android:background="@drawable/buoo1"
                                android:clickable="true"
                                android:layout_margin="10dp"
                                android:descendantFocusability="blocksDescendants"
                                android:gravity="center"
                                android:orientation="horizontal" >

                                <TextView
                                    android:onClick="Title5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="أحكام الحج و العمرة"
                                    android:textSize="21sp"
                                    android:fontFamily="@font/flat5"
                                    android:textStyle="bold"
                                    android:textColor="#252020" />

                                <ImageView
                                    android:onClick="Title5"
                                    android:layout_width="50dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_height="50dp"
                                    android:contentDescription="@string/app_name"
                                    android:src="@drawable/hga" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/Title2"
                        android:onClick="Titlea"
                        android:layout_height="match_parent">
                        <androidx.cardview.widget.CardView
                            android:onClick="Titlea"
                            android:layout_width="match_parent"
                            app:cardUseCompatPadding="true"
                            app:cardElevation="5dp"
                            app:cardBackgroundColor="#FCF8F8"
                            app:cardCornerRadius="10dp"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                android:background="@drawable/buoo1"
                                android:clickable="true"
                                android:onClick="Titlea"
                                android:layout_margin="10dp"
                                android:descendantFocusability="blocksDescendants"
                                android:gravity="center"
                                android:orientation="horizontal" >

                                <TextView
                                    android:onClick="Titlea"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="حقيبة الصائم في رمضان "
                                    android:textSize="21sp"
                                    android:fontFamily="@font/flat5"
                                    android:textStyle="bold"
                                    android:textColor="#252020" />

                                <ImageView
                                    android:onClick="Titlea"
                                    android:layout_width="50dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_height="50dp"
                                    android:contentDescription="@string/app_name"
                                    android:src="@drawable/ahdes" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>


        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>