<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#F0CFFF"
    android:layout_height="match_parent"
    tools:context=".About">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@drawable/around_line3"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:layoutDirection="ltr">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/around_line3"
            app:layout_collapseMode="pin"
            app:titleTextAppearance="@style/TitleToolBarApppearance"
            app:popupTheme="@style/TextAppearance.AppCompat">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_gravity="end">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="عن التطبيق"
                    style="@style/TextAppearance.MyApp.Title.QiblahActivity"
                    android:gravity="end"
                    android:layout_gravity="center"
                    android:layout_marginEnd="16dp"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/back_button"
                android:onClick="onBackClicked"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_back_button" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                  app:cardBackgroundColor="#F0CFFF"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            app:cardMaxElevation="5dp"
                            app:cardCornerRadius="20dp"
                            app:cardUseCompatPadding="true"
                            app:cardElevation="5dp"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp">

                                </LinearLayout>
                                <androidx.cardview.widget.CardView
                                    android:layout_width="120dp"
                                    app:cardElevation="5dp"
                                    android:layout_margin="10dp"
                                    app:cardCornerRadius="10dp"
                                    android:layout_height="120dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_margin="10dp"
                                        android:layout_height="match_parent">
                                        <androidx.cardview.widget.CardView
                                            android:layout_width="match_parent"
                                            app:cardElevation="8dp"
                                            app:cardCornerRadius="10dp"
                                            app:cardUseCompatPadding="true"
                                            android:layout_height="match_parent">
<ImageView
    android:layout_width="match_parent"
    android:src="@mipmap/ico_app"
    android:layout_height="match_parent" />
                                        </androidx.cardview.widget.CardView>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_margin="10dp"
                                    android:orientation="vertical"
                                    android:layout_marginTop="10dp"
                                    android:layout_height="wrap_content">


                                    <com.airbnb.lottie.LottieAnimationView
                                        android:id="@+id/animationView"
                                        android:layout_width="match_parent"
                                        android:layout_height="150dp"
                                        app:lottie_autoPlay="true"
                                        app:lottie_loop="false"
                                        app:lottie_rawRes="@raw/rateapp" />



                                    <TextView
                                        android:id="@+id/ts"
                                        android:layout_marginTop="10dp"
                                        android:layout_margin="5dp"
                                        android:text="@string/about"
                                        android:gravity="center"
                                        android:textSize="20sp"
                                        android:shadowDx="2"
                                        android:fontFamily="@font/flat4"
                                        android:shadowDy="2"
                                        android:shadowColor="#007280"
                                        android:textColor="#7A0131"
                                        android:textStyle="bold"
                                        android:lineSpacingExtra="5dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="5dp"
                                        android:gravity="center"
                                        android:layout_height="wrap_content">
                                        <net.steamcrafted.materialiconlib.MaterialIconView
                                            android:layout_width="wrap_content"
                                            android:id="@+id/sttat"
                                            android:onClick="oos1"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:scaleType="center"
                                            android:layout_margin="10dp"
                                            app:materialIcon="star"
                                            app:materialIconColor="#FFA000"
                                            app:materialIconSize="40dp" />
                                        <net.steamcrafted.materialiconlib.MaterialIconView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:scaleType="center"
                                            android:onClick="ooh1"
                                            android:layout_margin="10dp"
                                            app:materialIcon="share_variant"
                                            app:materialIconColor="#0097A7"
                                            app:materialIconSize="40dp" />
                                        <net.steamcrafted.materialiconlib.MaterialIconView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:scaleType="center"
                                            android:layout_margin="10dp"
                                            android:onClick="oon1"
                                            app:materialIcon="message"
                                            app:materialIconColor="#E9B4FF"
                                            app:materialIconSize="40dp" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_marginTop="10dp"
                                        android:layout_height="wrap_content">
                                        <Button
                                            android:layout_width="match_parent"
                                            android:textStyle="italic"
                                            android:onClick="oom1"
                                            android:layout_margin="10dp"
                                            android:textSize="16sp"
                                            android:textColor="#000731"
                                            android:background="#FFC2D9"
                                            android:text="تقديم اقتراح أو استفسار"
                                            android:layout_height="wrap_content" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_marginTop="10dp"
                                        android:layout_height="wrap_content">
                                        <Button
                                            android:layout_width="match_parent"
                                            android:textStyle="italic"
                                            android:onClick="walid99"
                                            android:layout_margin="10dp"
                                            android:textSize="16sp"
                                            android:textColor="#000731"
                                            android:background="#FFC2D9"
                                            android:text="المزيد من التطبيقات المجانية"
                                            android:layout_height="wrap_content" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_marginTop="10dp"
                                        android:layout_height="wrap_content">
                                        <Button
                                            android:layout_width="match_parent"
                                            android:textStyle="italic"
                                            android:onClick="walid"
                                            android:layout_margin="10dp"
                                            android:textSize="16sp"
                                            android:textColor="#000731"
                                            android:background="#FFC2D9"
                                            android:text="إصدار التطبيق الحالي : V 4.0"
                                            android:layout_height="wrap_content" />

                                    </LinearLayout>

                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>