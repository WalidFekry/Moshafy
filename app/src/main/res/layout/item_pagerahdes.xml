<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="3dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#BEACF1"
        app:cardCornerRadius="5dp"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="match_parent"
                    android:text="احاديث فقط من الصحيحين البخاري ومسلم"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#363434"
                    android:textSize="14dp"
                    android:fontFamily="@font/jazeera"
                    android:layout_height="match_parent"/>
                <View
                    android:layout_width="200dp"
                    android:background="#fff"
                    android:layout_gravity="center"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="3dp"
                        android:layout_gravity="center"
                        app:lottie_autoPlay="true"
                        app:lottie_fileName="8617-open-book.json"
                        app:lottie_loop="true"
                        tools:ignore="MissingConstraints" />
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:text="اسم الحديث "
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#363434"
                        android:textSize="17dp"
                        android:fontFamily="@font/jazeera"
                        android:layout_height="wrap_content"/>
                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="3dp"
                        android:layout_gravity="center"
                        app:lottie_autoPlay="true"
                        app:lottie_fileName="8617-open-book.json"
                        app:lottie_loop="true"
                        tools:ignore="MissingConstraints" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="4dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:text="اسم الايه هنا"
                        android:layout_margin="3dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#363434"
                        android:textSize="16dp"
                        android:fontFamily="@font/jazeera"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:id="@+id/shares"
                        android:layout_margin="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:materialIcon="share_variant"
                        app:materialIconColor="#E64A19"
                        app:materialIconSize="30dp"
                        tools:ignore="MissingConstraints" />

                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:id="@+id/copys"
                        android:layout_margin="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:materialIcon="content_copy"
                        app:materialIconColor="#E64A19"
                        app:materialIconSize="30dp"
                        tools:ignore="MissingConstraints" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_margin="10dp"
                        android:id="@+id/number"
                        android:layout_width="match_parent"
                        android:text="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#363434"
                        android:textSize="20dp"
                        android:fontFamily="@font/jazeera"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>


</LinearLayout>